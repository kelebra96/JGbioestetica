{
  "family": "jgbioestetica-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::850995565500:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::850995565500:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "jgbioestetica-container",
      "image": "850995565500.dkr.ecr.sa-east-1.amazonaws.com/jgbioestetica:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/jgbioestetica",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3001/api/status', (res) => process.exit(res.statusCode === 200 ? 0 : 1))\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "tags": [
    {
      "key": "awsApplication",
      "value": "arn:aws:resource-groups:sa-east-1:850995565500:group/JGBioestetica/0bj5z0s104m82b6lb3vzlgbip6"
    },
    {
      "key": "Name",
      "value": "JGBioestetica"
    },
    {
      "key": "Environment",
      "value": "production"
    }
  ]
}
